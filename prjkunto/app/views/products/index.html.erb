
<div>
  <% if current_user == nil %>
     <hr />
    <h4>Listing Products </h4> 
    <hr />
  
    <br /><br />
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
      </tr>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product_path(product.id) %></td>
      </tr>
      <% end %>
    </table> 
  <% else %>
    <hr />
    <h4>Listing Products </h4> 
    <hr />
  
    <br /><br />
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
      </tr>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product_path(product.id) %></td>
        <td><%= link_to 'Edit', edit_product_path(product.id) %></td>
      <td><%= link_to 'Delete', product_path(product.id), :confirm => 'are you sure?', :method => :delete %></td>
      </tr>
      <% end %>
    </table> 
  <% end %>
</div>
